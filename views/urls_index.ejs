<!DOCTYPE html>
<html lang="en">

<% include partials/_header %>

<head>
  <title>TinyApp</title>
</head>
<body>
  <% if(user !== undefined){ %>
    <div>
      <button onclick="window.location.href = 'http://localhost:8080/urls/new';">Create a New Short Link</button>
    </div>
  <% } %>
  <p style="display:inline">

    <% Object.getOwnPropertyNames(urlsInfo).forEach(function(shortURL) { %>
    <%= shortURL %>   ->   <%= urlsInfo[shortURL][0] %> / Created Date: <%= urlsInfo[shortURL][1] %> /
    Visited Times: <%= urlsInfo[shortURL][2] %> / Unique Visits: <%= urlsInfo[shortURL][3].length %>

    <button onclick="window.location.href = 'http://localhost:8080/urls/<%= shortURL %>';">Update</button>
    <form action="/urls/<%= shortURL %>/delete" method="post" style="display:inline">
      <input type="submit" name="delete" value="Delete"/>
    </form>
    <br>
    <% }); %>
  </p>
</body>
</html>